{
  "compilerOptions": {
    "target": "es6",  // Tipo di output JavaScript
    "module": "commonjs",  // Modulo che verr√† usato (ad esempio, Node.js usa commonjs)
    "outDir": "./dist",  // Directory di output per i file JavaScript compilati
    "rootDir": "./src",  // Directory contenente i file sorgente TypeScript
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"  // Includi tutti i file .ts dentro src/
  ],
  "exclude": [
    "node_modules"  // Escludi la cartella node_modules
  ]
}
