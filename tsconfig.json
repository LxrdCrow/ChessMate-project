{
  "compilerOptions": {
    "target": "es6",  
    "module": "commonjs",  
    "outDir": "./dist",  
    "rootDir": "./src",  
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules"  
  ]
}
